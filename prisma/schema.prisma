generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  favorites Favorite[]
}

model Cats {
  id        String     @id @default(uuid())
  color     String
  name      String
  age       Int
  url       String?
  price     Int?
  sale      Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  favorites Favorite[]
}


model ResetPassword {
  id        String   @id @default(uuid())
  email     String
  code      String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model BlacklistedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  createdAt DateTime @default(now())
}


model Favorite {
  id     String @id @default(uuid())
  userId String
  catsId String
  cats   Cats   @relation(fields: [catsId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, catsId])
}
